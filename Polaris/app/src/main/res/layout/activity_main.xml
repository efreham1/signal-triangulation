<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/ssidLabel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/ssid_prompt" />

    <Button
        android:id="@+id/selectSsidBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/choose_ssid" />

    <TextView
        android:id="@+id/source_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_source" />

    <Button
        android:id="@+id/measureSourceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/measure_source" />

    <Button
        android:id="@+id/accuracyTestBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_accuracy_test"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/status_ready"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/takeMeasurementBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="@string/take_measurement"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/autoBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="@string/auto_measurement"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <Button
        android:id="@+id/cleanRecordsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clean_records"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/exportBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/export_json"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/wifiTransferLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/wifi_transfer_title"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/wifiHostInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/wifi_host_hint"
        android:inputType="textUri|textNoSuggestions" />

    <EditText
        android:id="@+id/wifiPortInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/wifi_port_hint"
        android:inputType="number"
        android:text="8000" />

    <Button
        android:id="@+id/sendWifiBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/wifi_send" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" >

        <TextView
            android:id="@+id/allRecordsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_db"
            android:textSize="14sp"
            android:padding="8dp"/>
    </ScrollView>

</LinearLayout>