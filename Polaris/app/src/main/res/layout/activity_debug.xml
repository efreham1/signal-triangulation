<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/source_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_source"
            android:textColor="@color/text_white" />

        <Button
            android:id="@+id/sourceLocationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/measure_source"
            android:backgroundTint="@color/secondary_blue"
            android:textColor="@color/text_white" />

        <Button
            android:id="@+id/locationAccuracyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_accuracy_test"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary_blue"
            android:textColor="@color/text_white" />

        <Button
            android:id="@+id/loadMeasurementsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/import_measurements"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary_blue"
            android:textColor="@color/text_white" />

        <Button
            android:id="@+id/closeDebugBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:backgroundTint="@color/secondary_blue"
            android:textColor="@color/text_white" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navbar_bg"
        app:itemIconTint="@color/text_white"
        app:itemTextColor="@color/text_white"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>