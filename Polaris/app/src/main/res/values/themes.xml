<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Changed parent from DayNight to Light.NoActionBar to disable dark mode behavior -->
    <style name="Theme.Polaris" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/primary_dark_bg</item>
        <item name="colorPrimaryVariant">@color/primary_dark_bg</item>
        <!-- Title text color in toolbar -->
        <item name="titleTextColor">@color/text_white</item>
        
        <!-- Button colors -->
        <item name="colorButtonNormal">@color/secondary_blue</item>
        <item name="android:buttonStyle">@style/PolarisButton</item>
        
        <!-- Standard text color on light backgrounds (if any remain) -->
        <item name="android:textColor">@color/text_white</item>
        <item name="android:windowBackground">@color/primary_dark_bg</item>
        <item name="android:statusBarColor">@color/primary_dark_bg</item>
        
        <!-- Dialog overrides -->
        <item name="android:dialogTheme">@style/PolarisDialog</item>
        <item name="alertDialogTheme">@style/PolarisDialog</item>
    </style>
    
    <style name="PolarisButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/secondary_blue</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="PolarisDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Ensure dialog background is light or dark as preferred, but text is black -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
</resources>